@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

find_dependency(MPI REQUIRED)

set(INT2C_USE_MKL @INT2C_USE_MKL@)
set(INT2C_USE_FFTW @INT2C_USE_FFTW@)

if(INT2C_USE_MKL)
    find_dependency(MKL REQUIRED)
else()
    find_dependency(LAPACK REQUIRED)
    if(INT2C_USE_FFTW)
        find_package(PkgConfig REQUIRED)
        pkg_check_modules(FFTW3 REQUIRED fftw3)
        if(NOT TARGET FFTW::FFTW)
            add_library(FFTW::FFTW INTERFACE IMPORTED)
            set_target_properties(FFTW::FFTW PROPERTIES
                INTERFACE_INCLUDE_DIRECTORIES "${FFTW3_INCLUDE_DIRS}" 
                INTERFACE_LINK_LIBRARIES     "${FFTW3_LIBRARIES}")
        endif()
    endif()
endif()

include("${CMAKE_CURRENT_LIST_DIR}/int2cTargets.cmake")

check_required_components(int2c)
